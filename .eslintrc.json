{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
        "indent": ["warn", 4, {
            "SwitchCase": 1
        }],
        "semi": ["error", "always"],
        "space-before-function-paren": ["warn", {
            "anonymous": "always",
            "named": "never"
        }]
    }
}